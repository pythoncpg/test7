<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="@dimen/view_dimen_200"
      android:layout_marginLeft="@dimen/main_padding_60">
    <TextView
        android:id="@+id/tv_extraInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小米账号"
        android:textColor="@color/headline"
        android:textSize="28sp"
        />

    <TextView
        android:id="@+id/tv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/main_padding_20"
        android:background="@drawable/icon_user" />

  </LinearLayout>
  <TextView
      android:id="@+id/tv_login_info2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="重置密码"
      android:layout_gravity="center"
      android:layout_marginTop="@dimen/main_padding_80"
      android:textColor="@color/headline"
      android:textSize="18sp"
      />

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="请输入您的手机号"
      android:textColor="#000000"
      android:textSize="18sp"
      android:layout_marginTop="@dimen/main_padding_50"
      android:layout_marginLeft="@dimen/main_padding_60"/>

  <EditText
      android:id="@+id/tv_user_account"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/main_padding_60"
      android:layout_marginTop="@dimen/view_dimen_30"
      android:layout_marginRight="@dimen/main_padding_60"
      android:background="@drawable/bg_bt_login_gray"
      android:hint="手机号"
      android:paddingLeft="@dimen/view_dimen_100"
      android:paddingTop="@dimen/view_dimen_20"
      android:paddingBottom="@dimen/view_dimen_20"
      android:textColor="#000000"
      android:textSize="20sp"

      />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="输入新的账号密码"
      android:textColor="#000000"
      android:textSize="18sp"
      android:layout_marginTop="@dimen/main_padding_50"
      android:layout_marginLeft="@dimen/main_padding_60"/>
  <EditText
      android:id="@+id/tv_user_password"
      android:background="@drawable/bg_bt_login_gray"
      android:layout_marginTop="@dimen/view_dimen_30"
      android:layout_marginLeft="@dimen/main_padding_60"
      android:layout_marginRight="@dimen/main_padding_60"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="@dimen/view_dimen_20"
      android:paddingBottom="@dimen/view_dimen_20"
      android:textSize="20sp"
      android:hint="新密码"
      android:textColor="#000000"
      android:paddingLeft="@dimen/view_dimen_100"
      android:clickable="false"
      />

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="再次输入账号密码"
      android:textColor="#000000"
      android:textSize="18sp"
      android:layout_marginTop="@dimen/main_padding_50"
      android:layout_marginLeft="@dimen/main_padding_60"/>
  <EditText
      android:id="@+id/tv_user_password_again"
      android:background="@drawable/bg_bt_login_gray"
      android:layout_marginTop="@dimen/view_dimen_30"
      android:layout_marginLeft="@dimen/main_padding_60"
      android:layout_marginRight="@dimen/main_padding_60"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="@dimen/view_dimen_20"
      android:paddingBottom="@dimen/view_dimen_20"
      android:textSize="20sp"
      android:hint="确认密码"
      android:textColor="#000000"
      android:paddingLeft="@dimen/view_dimen_100"
      android:clickable="false"
      />

  <LinearLayout
      android:layout_marginLeft="@dimen/main_padding_60"
      android:layout_marginRight="@dimen/main_padding_60"
      android:layout_marginTop="@dimen/main_padding_100"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bt_login_orange"
        android:text="提交"
        android:layout_marginRight="@dimen/main_padding_60"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/tv_reset"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bt_login_gray"
        android:text="清空输入"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="#F2A154"
        />

  </LinearLayout>




</LinearLayout>