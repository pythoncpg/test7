<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PublishActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_padding_30"
        android:layout_marginRight="@dimen/main_padding_30"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/main_padding_30"
            android:text="取消"
            android:textSize="18sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="发帖"
            android:textAlignment="center"
            android:textColor="@color/headline"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_publish_tv_publish"
            android:paddingLeft="@dimen/main_padding_25"
            android:paddingTop="@dimen/main_padding_10"
            android:paddingRight="@dimen/main_padding_25"
            android:paddingBottom="@dimen/view_dimen_10"
            android:text="发表"
            android:textColor="@color/white"
            android:textSize="18sp"

            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_dimen_10"
        android:background="@color/lightGray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <EditText
            android:id="@+id/tv_content"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="请输入内容"
            android:gravity="left|top"
            android:background="@null"
            android:paddingTop="@dimen/view_dimen_30"
            android:paddingLeft="@dimen/main_padding_30"

            />
        <ImageView
            android:id="@+id/tv_add_picture"
            android:clickable="true"
            android:layout_marginLeft="@dimen/view_dimen_50"
            android:background="@drawable/bg_round_square_light_gray"
            android:layout_width="@dimen/view_dimen_300"
            android:layout_height="@dimen/view_dimen_300"
            android:layout_marginBottom="@dimen/main_padding_50" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_dimen_10"
        android:background="@color/lightGray" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_padding_30"
        android:layout_marginTop="@dimen/main_padding_60"
        android:text="动物类型"
        android:textColor="@color/headline"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_marginTop="@dimen/main_padding_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/main_padding_30"
        android:layout_marginRight="@dimen/main_padding_30">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_animal"
            android:layout_marginRight="@dimen/main_padding_40"
            android:paddingTop="@dimen/main_padding_9"
            android:paddingBottom="@dimen/main_padding_9"
            android:layout_weight="1"
            android:hint="猫或狗"
            android:textSize="16sp"
            android:background="@color/lightGray"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/tv_animal_species"
            android:layout_width="0dp"
            android:background="@color/lightGray"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/main_padding_30"
            android:paddingTop="@dimen/main_padding_9"
            android:paddingBottom="@dimen/main_padding_9"
            android:hint="请输入动物的品种"
            android:textAlignment="center"
            android:layout_weight="2" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_padding_30"
        android:layout_marginTop="@dimen/main_padding_60"
        android:text="微信号"
        android:textColor="@color/headline"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_marginTop="@dimen/main_padding_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/main_padding_30"
        android:layout_marginRight="@dimen/main_padding_30">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_weChat"
            android:layout_marginRight="@dimen/main_padding_40"
            android:paddingTop="@dimen/main_padding_9"
            android:paddingBottom="@dimen/main_padding_9"
            android:layout_weight="2"
            android:hint="请输入您的微信号"
            android:textSize="16sp"
            android:background="@color/lightGray"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/main_padding_30"
            android:paddingTop="@dimen/main_padding_9"
            android:paddingBottom="@dimen/main_padding_9"
            android:clickable="false"
            android:textAlignment="center"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_padding_30"
        android:layout_marginTop="@dimen/main_padding_60"
        android:text="联系地址"
        android:textColor="@color/headline"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_marginTop="@dimen/main_padding_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/main_padding_30"
        android:layout_marginRight="@dimen/main_padding_30"
        android:layout_marginBottom="@dimen/main_padding_60">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginRight="@dimen/main_padding_40"
            android:paddingTop="@dimen/main_padding_9"
            android:paddingBottom="@dimen/main_padding_9"
            android:layout_weight="2"
            android:id="@+id/tv_address"
            android:hint="请输入您的联系地址"
            android:textSize="16sp"
            android:background="@color/lightGray"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/main_padding_30"
            android:paddingTop="@dimen/main_padding_9"
            android:paddingBottom="@dimen/main_padding_9"
            android:clickable="false"
            android:textAlignment="center"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>



</LinearLayout>